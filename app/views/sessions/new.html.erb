<div class="col-lg-4 col-md-4 col-sm-4 container justify-content-center">
  <div class="form-outline mb-4">
    <h2 align="center">Log in</h2>
  </div>
  <%= form_with url: log_in_path do |f| %>
    <div class="form-outline mb-4">
      <%= f.label 'email:'%><br>
      <%= f.text_field :email, id: 'email', class: "form-control", required: true %>
    </div>
    <div class="form-outline mb-4">
      <%= f.label 'password:'%><br>
      <%= f.password_field :password, id: 'password', class: "form-control", required: true %>
    </div>
    <div class="form-outline mb-4">
      <%= f.submit 'Log In', class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>